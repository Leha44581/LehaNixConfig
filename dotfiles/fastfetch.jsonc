{
	"$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
	"logo": {
		"source": "/etc/nixos/assets/fastfetch_nixos_logo.txt",
		"type": "file",
		"height": 28,
		"width": 28,
		"color": {
			"1": "#5BCEFA",
			"2": "#F5A9B8",
			"3": "#FFFFFF"
		},
		"padding": {
			"top": 0,
			"bottom": 0,
			"left": 1,
			"right": 1
		}
	},
	"modules": [
		{
			"type": "custom",
			"format": "┌───────────────────────────────────────────────────┐"
		},
		{
			"type": "host",
			"key": "HOST🖳 ",
			"keyColor": "yellow"
		},
        {
            "type": "cpu",
            "key": "│├ ",
            "keyColor": "yellow"
        },
        {
            "type": "gpu",
            "key": "│├󱔼 ",
            "keyColor": "yellow"
        },
        {
            "type": "memory",
            "key": "│├ ",
            "keyColor": "yellow"
        },
        {
            "type": "swap",
            "key": "│├🗘 ",
            "keyColor": "yellow"
        },
        {
            "type": "disk",
            "key": "│└ ",
            "keyColor": "yellow"
        },
        {
            "type": "os",
            "key": "OS󱄅 ",
            "keyColor": "green"
        },
        {
            "type": "packages",
            "key": "│├ ",
            "keyColor": "green"
        },
        {
            "type": "shell",
            "key": "│├ ",
            "keyColor": "green"
        },
        {
            "type": "kernel",
            "key": "│├ ",
            "keyColor": "green"
        },
        {
            "type": "de",
            "key": "│├🖵 ",
            "keyColor": "blue"
        },
        {
            "type": "wm",
            "key": "│├🖵 ",
            "keyColor": "blue"
        },
        {
            "type": "terminal",
            "key": "│└ ",
            "keyColor": "blue"
        },
		{
			"type": "command",
			"text": "sha1sum /etc/nixos/configuration.nix | tr '[:lower:]' '[:upper:]' | awk '{print $1}'",
			"key": "NIX ",
			"keyColor": "magenta"
		},
        {
            "type": "uptime",
            "key": "│├ ",
            "keyColor": "magenta"
        },
        {
            "type": "datetime",
            "key": "└└ ",
            "keyColor": "magenta"
        },
		{
			"type": "custom",
			"format": "└───────────────────────────────────────────────────┘"
		},
		{
			"type": "colors",
			"paddingLeft": 2,
			"symbol": "circle"
		}
	]
}
